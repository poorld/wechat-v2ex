.container {
  margin: 0;
  padding: 0;
}
/* 每一个框 */
/* 整体分为3部分 */
.topic {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;  
  border-bottom: 1px solid #eee;
}

/* 头像 左边部分*/
.head-portrait image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-left: 10rpx;
}

/* 标题与表情，中间部分 */
.show {
  width: 550rpx;
  /* background-color: #eee; */
  display: flex;
  flex-direction: column;
  align-items:  flex-start;
}

.show-top {
  margin-left: 20rpx;
  margin-top: -15rpx;
}

/* 文字溢出处理 */
.show-top .title {  
  width: 530rpx;
  /* background-color: #eee; */
  display: -webkit-box;             /*将对象转为弹性盒模型展示*/
  -webkit-box-orient: vertical;     /*设置弹性盒模型子元素的排列方式*/
  -webkit-line-clamp: 1;            /*限制文本行数*/
  overflow: hidden;                 /*超出隐藏*/

}

.show-bottom {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
/* 标题 */
.title text {
  letter-spacing:2px;
  font-size: 0.8em;
  color: rgba(0, 0, 0, 0.575);
  
}

.label text {
  font-size: 0.7em;
  color: rgba(0, 0, 0, 0.349);
  background-color: #eee;
  border-radius: 5px;
  padding: 2px;
}
.dot {
  margin-top: 10rpx;
  margin-left: 20rpx;
  width: 5px;
  height: 5px;
  background-color: rgb(214, 214, 214);
  border-radius: 100%;
}
.author text {
  margin-left: 20rpx;
  font-size: 0.8em;
  color: rgb(175, 175, 175);
}
/* 右边部分 */
.reply text{
  background-color: rgba(158, 158, 158, 0.637);
  color: #fff;
  border-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 0.7em;
}